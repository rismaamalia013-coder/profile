<script>
  // Theme toggle (persist in localStorage)
  const themeToggle = document.getElementById('themeToggle');
  const root = document.documentElement;
  function applyTheme(t){
    if(t==='light'){document.documentElement.setAttribute('data-theme','light');themeToggle.setAttribute('aria-pressed','true')} else {document.documentElement.removeAttribute('data-theme');themeToggle.setAttribute('aria-pressed','false')}
  }
  const saved = localStorage.getItem('theme'); if(saved) applyTheme(saved);
  themeToggle.addEventListener('click', ()=>{const cur = document.documentElement.getAttribute('data-theme')==='light'?'dark':'light';applyTheme(cur);localStorage.setItem('theme', cur);});

  // Animate skill bars
  function animateSkills(){document.querySelectorAll('.fill').forEach(f=>{const p = f.getAttribute('data-percent');f.style.width = p+'%';});}
  window.addEventListener('load', ()=> setTimeout(animateSkills, 300));

  // Contact form: open mailto as fallback
  function handleSubmit(e){e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const message = document.getElementById('message').value.trim();

    // Validate minimal
    if(!name||!email||!message){alert('Lengkapi semua kolom.');return false}

    // Build mailto link
    const subject = encodeURIComponent('Pesan dari '+name);
    const body = encodeURIComponent('Nama: '+name+'
Email: '+email+'

'+message);
    const mailto = 'mailto:'+encodeURIComponent('rismaamalia@gmail.com')+'?subject='+subject+'&body='+body;

    // Open user's mail client
    window.location.href = mailto;
    return false;
  }

  // Print / Save as PDF
  document.getElementById('printBtn').addEventListener('click', ()=> window.print());
  document.getElementById('downloadPdf').addEventListener('click', ()=> window.print());

  // Smooth scroll for internal links
  document.querySelectorAll('a[href^="#"]').forEach(a=>{
    a.addEventListener('click', e=>{ const target = document.querySelector(a.getAttribute('href')); if(target){ e.preventDefault(); target.scrollIntoView({behavior:'smooth',block:'start'}); } });
  });

  // Contact quick-open
  document.getElementById('contactOpen').addEventListener('click', ()=>{document.getElementById('contact').scrollIntoView({behavior:'smooth'});});

  // Accessibility: keyboard focus outline on Tab
  (function(){let mouseMode = false; window.addEventListener('mousedown', ()=>mouseMode=true); window.addEventListener('keydown', e=>{if(e.key==='Tab') mouseMode=false; document.body.style.outline = mouseMode? 'none':''});})();
</script>

